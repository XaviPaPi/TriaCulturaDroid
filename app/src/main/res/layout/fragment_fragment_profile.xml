<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    tools:context="com.example.xavi.triaculturadroid.FragmentProfile"
    android:baselineAligned="false">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_user_nom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14pt"
            android:textColor="@android:color/black"
            android:text="" />

        <TextView
            android:id="@+id/tv_label_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="9pt"
            android:textColor="@android:color/black"
            android:layout_marginTop="15dp"
            android:text="@string/literal_correu_electr_nic" />

        <Button
            android:id="@+id/btn_see_votes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/btn_historial_de_vots"
            android:background="@drawable/buttonstyle"
            />
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_change_pass"
                android:layout_height="45dp"
                android:layout_width="45dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/img_pass" />

        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->

            <ImageButton
                android:id="@+id/btn_change_mail"
                android:layout_height="45dp"
                android:layout_width="45dp"
                android:layout_marginLeft="50dp"
                android:background="@drawable/img_email" />
        </LinearLayout>
    <LinearLayout
            android:id="@+id/pasword_profile"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/oldpass"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittextstyle"
                    android:hint="Paraula de pas actual"
                    android:inputType="textPassword" />

                <EditText
                    android:id="@+id/newpass1"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittextstyle"
                    android:fontFamily="sans-serif"
                    android:hint="Nova paraula de pas"
                    android:inputType="textPassword" />

                <EditText
                    android:id="@+id/newpass2"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittextstyle"
                    android:fontFamily="sans-serif"
                    android:hint="Confirma paraula de pas"
                    android:inputType="textPassword" />
            </LinearLayout>

            <Button
                android:id="@+id/DS_btn_aceptar_pass"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonstyle" />
        </LinearLayout>
    <LinearLayout
            android:id="@+id/mail_profile"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:id="@+id/newMail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/edittextstyle"
                android:hint="Insertar nou email" />

            <EditText
                android:id="@+id/newMail2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/edittextstyle"
                android:hint="Confirmar nou email" />
        </LinearLayout>

            <Button
                android:id="@+id/DS_btn_aceptar_mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/buttonstyle" />
        </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>

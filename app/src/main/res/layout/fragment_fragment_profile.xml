<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.example.xavi.triaculturadroid.FragmentProfile"
    android:baselineAligned="false">

    <LinearLayout
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">
        <ImageView
            android:layout_marginStart="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="50dp"
            android:id="@+id/iv_profile_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            android:contentDescription="@string/literal_profile_picture"/>
        <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/tv_label_dni"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/literal_dni"/>
        <TextView
            android:id="@+id/tv_user_dni"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""/>
        <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/tv_label_nom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/literal_nom"/>
        <TextView
            android:id="@+id/tv_user_nom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""/>
        <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/tv_label_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/literal_correu_electr_nic"/>
        <TextView
            android:id="@+id/tv_user_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="100dp"
        android:layout_marginRight="25dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical">
        <Button
            android:id="@+id/btn_change_pass"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_canvia_password"/>
        <Button
            android:id="@+id/btn_change_mail"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_canvia_correu"/>
        <Button
            android:id="@+id/btn_see_votes"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_historial_de_vots"/>
        <Button
            android:id="@+id/btn_see_ratings"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_valoracions"/>
    </LinearLayout>

</LinearLayout>

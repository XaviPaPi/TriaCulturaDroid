<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".ProjectActivityProfile"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/backgroundlogin"
    >

    <TextView
        android:id="@+id/PH_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textSize="20dp"
        android:layout_weight="1"
        android:text="TITLE"
        android:textStyle="bold"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/PH_AuthorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="55dp"
        android:layout_weight="1"
        android:text="AUTHOR NAME"
        android:layout_gravity="center_vertical|left"
        android:textStyle="italic|bold"
        android:textColor="@android:color/holo_blue_dark"/>

    <TextView
        android:id="@+id/PH_Description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:text="THIS THE DESCRIPTION PROJECTTHIS THE DESCRIPTION PROJECTTHIS THE DESCRIPTION PROJECTTHIS THE DESCRIPTION PROJECTTHIS THE DESCRIPTION PROJECTTHIS THE DESCRIPTION PROJECTTHIS THE DESCRIPTION PROJECTTHIS THE DESCRIPTION PROJECTTHIS THE DESCRIPTION PROJECT"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        tools:background="#85ffffff"
        android:padding="20dp"
        android:alpha="1"
        />


</android.widget.LinearLayout>